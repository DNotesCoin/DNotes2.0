#!/bin/sh

set -e

umask 077

basedir=~/.dnotes
dbfile="$basedir/DB_CONFIG"
cfgfile="$basedir/dnotes.conf"

[ -e "$basedir" ] || mkdir "$basedir"

# DNotes does not clean up DB log files by default
[ -e "$dbfile" ] || echo 'set_flags DB_LOG_AUTOREMOVE' > "$dbfile"

exec /usr/lib/dnotes/dnotes-qt "$@"
